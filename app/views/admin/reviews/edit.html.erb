<p>
  <strong>Отзыв</strong>: <%= @review.content %>
</p>

<%= form_for [:admin, @review] do |f| %>
  <div class="form-group">
    <%= f.label :approved %>
    <%= f.check_box :approved, class: 'checkbox' %>
  </div>

  <div class="form-group">
    <%= f.submit 'Проверить', class: 'btn btn-sm btn-primary' %>
  </div>
<% end %>
